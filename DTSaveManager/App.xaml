<Application x:Class="DTSaveManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:DTSaveManager.Services">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Fonts.xaml"/>
                <ResourceDictionary Source="Styles/ScrollViewers.xaml"/>
                <ResourceDictionary Source="Styles/Windows.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/Labels.xaml"/>
                <ResourceDictionary Source="Styles/TabControls.xaml"/>
                <ResourceDictionary Source="Styles/TreeViews.xaml"/>
                <ResourceDictionary Source="Styles/Popups.xaml"/>
                <ResourceDictionary Source="Styles/ToolTips.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <services:ViewModelLocatorService x:Key="Locator"/>
        </ResourceDictionary>

    </Application.Resources>
</Application>
